    <footer>
      Live HTML prototype ‚Äî cards, sliders, and chips are real elements. Replace dummy data with your generator logic when ready.
    </footer>
  </div>

  <script>
    // Tab navigation
    const buttons = document.querySelectorAll('.nav-btn');
    const screens = document.querySelectorAll('.screen');

    buttons.forEach(btn => {
      btn.addEventListener('click', () => {
        const targetId = btn.getAttribute('data-target');

        buttons.forEach(b => b.classList.remove('active'));
        btn.classList.add('active');

        screens.forEach(s => {
          if (s.id === targetId) s.classList.add('active');
          else s.classList.remove('active');
        });
      });
    });

    // Station cards data
    const stations = [
      { name: 'Receiving', oee: 80, wip: 1, power: 1, lights: 0, fans: 50, status: 'idle' },
      { name: 'Cutting / Prep', oee: 75, wip: 2, power: 1, lights: 40, fans: 70, status: 'idle' },
      { name: 'Framing', oee: 70, wip: 3, power: 1, lights: 60, fans: 90, status: 'idle' },
      { name: 'Plumbing', oee: 65, wip: 4, power: 1, lights: 75, fans: 0, status: 'idle' },
      { name: 'Electrical', oee: 80, wip: 5, power: 1, lights: 90, fans: 30, status: 'idle' },
      { name: 'HVAC', oee: 75, wip: 1, power: 1, lights: 60, fans: 50, status: 'idle' },
      { name: 'Insulation', oee: 70, wip: 2, power: 1, lights: 40, fans: 70, status: 'idle' },
      { name: 'Interior Finish', oee: 65, wip: 3, power: 1, lights: 60, fans: 90, status: 'idle' },
      { name: 'Exterior Finish', oee: 80, wip: 4, power: 1, lights: 75, fans: 0, status: 'idle' },
      { name: 'QA / Inspect', oee: 75, wip: 5, power: 1, lights: 90, fans: 30, status: 'idle' },
      { name: 'Shipping Dock', oee: 70, wip: 1, power: 1, lights: 0, fans: 50, status: 'idle' },
    ];

    function createStationCard(station, index, compact) {
      const card = document.createElement('div');
      card.className = 'station-card';
      card.dataset.index = index;

      const header = document.createElement('div');
      header.className = 'station-header';

      const name = document.createElement('div');
      name.className = 'station-name';
      name.textContent = station.name;

      const status = document.createElement('span');
      status.className = 'status-pill idle';
      status.textContent = 'Idle';
      status.dataset.role = 'status';

      header.appendChild(name);
      header.appendChild(status);
      card.appendChild(header);

      // Power toggle
      const powerRow = document.createElement('div');
      powerRow.className = 'slider-row';
      powerRow.innerHTML = '<span class="label">Power</span>';
      const powerToggle = document.createElement('input');
      powerToggle.type = 'checkbox';
      powerToggle.checked = !!station.power;
      powerToggle.addEventListener('change', () => {
        status.textContent = powerToggle.checked ? 'Running' : 'Idle';
        status.classList.toggle('running', powerToggle.checked);
        status.classList.toggle('idle', !powerToggle.checked);
      });
      const powerLabel = document.createElement('span');
      powerLabel.className = 'value';
      powerLabel.textContent = powerToggle.checked ? 'On' : 'Off';
      powerToggle.addEventListener('change', () => {
        powerLabel.textContent = powerToggle.checked ? 'On' : 'Off';
      });
      powerRow.appendChild(powerToggle);
      powerRow.appendChild(powerLabel);
      card.appendChild(powerRow);

      // Lights slider
      const lightsRow = document.createElement('div');
      lightsRow.className = 'slider-row';
      lightsRow.innerHTML = '<span class="label">Lights</span>';
      const lightsSlider = document.createElement('input');
      lightsSlider.type = 'range';
      lightsSlider.min = 0;
      lightsSlider.max = 100;
      lightsSlider.value = station.lights;
      const lightsValue = document.createElement('span');
      lightsValue.className = 'value';
      lightsValue.textContent = station.lights + '%';
      lightsSlider.addEventListener('input', () => {
        lightsValue.textContent = lightsSlider.value + '%';
      });
      lightsRow.appendChild(lightsSlider);
      lightsRow.appendChild(lightsValue);
      card.appendChild(lightsRow);

      // Fans slider
      const fansRow = document.createElement('div');
      fansRow.className = 'slider-row';
      fansRow.innerHTML = '<span class="label">Fans</span>';
      const fansSlider = document.createElement('input');
      fansSlider.type = 'range';
      fansSlider.min = 0;
      fansSlider.max = 100;
      fansSlider.value = station.fans;
      const fansValue = document.createElement('span');
      fansValue.className = 'value';
      fansValue.textContent = station.fans + '%';
      fansSlider.addEventListener('input', () => {
        fansValue.textContent = fansSlider.value + '%';
      });
      fansRow.appendChild(fansSlider);
      fansRow.appendChild(fansValue);
      card.appendChild(fansRow);

      const footer = document.createElement('div');
      footer.className = 'station-footer';
      const wip = document.createElement('span');
      wip.textContent = 'WIP ' + station.wip;
      const oee = document.createElement('span');
      oee.textContent = 'OEE ' + station.oee + '%';
      footer.appendChild(wip);
      footer.appendChild(oee);

      if (!compact) {
        const btn = document.createElement('button');
        btn.className = 'small-btn primary';
        btn.textContent = 'Start 45m';
        footer.appendChild(btn);
      }

      card.appendChild(footer);

      if (compact) {
        card.addEventListener('click', () => {
          document.querySelectorAll('#alt-stations .station-card').forEach(c => c.style.outline = 'none');
          card.style.outline = '2px solid var(--accent-amber)';
        });
      }

      return card;
    }

    const grid = document.getElementById('stations-grid');
    const altGrid = document.getElementById('alt-stations');
    stations.forEach((s, i) => {
      grid.appendChild(createStationCard(s, i, false));
      altGrid.appendChild(createStationCard(s, i, true));
    });

    // Scenes widget
    const sceneLabel = document.getElementById('scene-label');
    document.querySelectorAll('.scene-btn').forEach(btn => {
      btn.addEventListener('click', () => {
        const scene = btn.getAttribute('data-scene');
        sceneLabel.textContent = 'Scene: ' + scene;
      });
    });

    // Tool lift progress (simple fake loop)
    const toolProgress = document.getElementById('tool-progress');
    let prog = 0;
    setInterval(() => {
      prog = (prog + 5) % 105;
      toolProgress.style.width = prog + '%';
    }, 600);

    // Music controls
    const musicStatus = document.getElementById('music-status');
    document.querySelectorAll('.music-btn').forEach(btn => {
      btn.addEventListener('click', () => {
        const mode = btn.getAttribute('data-music');
        if (mode === 'play') musicStatus.textContent = 'Playing ¬∑ House Mix A';
        if (mode === 'pause') musicStatus.textContent = 'Paused';
        if (mode === 'mute') musicStatus.textContent = 'Muted on floor';
      });
    });
    const volInput = document.getElementById('music-volume');
    const volLabel = document.getElementById('music-volume-label');
    volInput.addEventListener('input', () => {
      volLabel.textContent = volInput.value;
    });

    // GROUND TO GALAXY SEARCH FILTER
    const gtgSearch = document.getElementById('gtg-search');
    const gtgSearchBtn = document.getElementById('gtg-search-btn');
    const gtgModules = document.querySelectorAll('#gtg-modules .gtg-module-card');
    const gtgEmpty = document.getElementById('gtg-empty');

    function filterGTGModules() {
      const term = (gtgSearch.value || '').toLowerCase().trim();
      let visibleCount = 0;

      gtgModules.forEach(card => {
        const title = card.getAttribute('data-title') || '';
        const match = title.toLowerCase().includes(term);
        card.style.display = match || term === '' ? 'block' : 'none';
        if (match || term === '') visibleCount++;
      });

      gtgEmpty.style.display = visibleCount === 0 ? 'block' : 'none';
    }

    if (gtgSearch) {
      gtgSearch.addEventListener('input', filterGTGModules);
    }
    if (gtgSearchBtn) {
      gtgSearchBtn.addEventListener('click', filterGTGModules);
    }
  </script>
</body>
</html>

